<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="12dp">

        <!-- Consulta 1 -->

        <EditText
            android:id="@+id/editTextQuery1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter first query" />

        <Button
            android:id="@+id/buttonQuery1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Query 1" />

        <TextView
            android:id="@+id/resultText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result 1 will appear here"
            android:paddingTop="8dp" />

        <!-- Consulta 2 -->
        <EditText
            android:id="@+id/editTextQuery2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter second query" />

        <Button
            android:id="@+id/buttonQuery2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Query 2" />

        <TextView
            android:id="@+id/resultText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result 2 will appear here"
            android:paddingTop="8dp" />

    </LinearLayout>
</ScrollView>